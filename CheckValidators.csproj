<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Version>1.0.15</Version>
		<Authors>Ryan A. Kueter</Authors>
		<Company>Ryan A. Kueter</Company>
		<Description>A simple, elegant, and powerful .NET validation library that allows you to add your own validation extensions.</Description>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageIcon>Icon.jpg</PackageIcon>
		<PackageIconUrl />
		<RepositoryUrl>https://github.com/ryankueter/CheckValidators</RepositoryUrl>
		<PackageReleaseNotes>This release deprecates ElseIf and ElseIfNot and replaces them with AndIf and AndIfNot. This replacement should not introduce breaking changes and will still only execute if a previous If or AndIf rule passes validation. It also includes OrIf and OrIfNot rules, which perform the opposite function of AndIf and AndIfNot and only executes if a previous If or AndIf rule fails validation.</PackageReleaseNotes>
		<PackageTags>C#;Validations;Guards</PackageTags>
		<AssemblyVersion>1.0.15</AssemblyVersion>
		<FileVersion>1.0.15</FileVersion>
		<Copyright>Ryan A. Kueter</Copyright>
		<PackageProjectUrl>https://github.com/ryankueter/CheckValidators</PackageProjectUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<RepositoryType>Git</RepositoryType>
		<Product>$(AssemblyName)</Product>
		<NeutralLanguage>en</NeutralLanguage>
	</PropertyGroup>

	<ItemGroup>
		<None Include="Icon.jpg">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="LICENSE">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>

</Project>
